<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">

    <br><br>
    <h3>Create a New Listing</h3>

    <form method="POST" action="/listings">
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input id="title" name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea id="description" name="listing[description]" class="form-control" placeholder="Enter description" required></textarea>
      </div>

      <!-- Image URL -->
      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input id="image" name="listing[image][url]" placeholder="Enter image URL" type="text" class="form-control" required>
      </div>

      <!-- Image Filename (Optional) -->
      <div class="mb-3">
        <label for="filename" class="form-label">Image Filename (optional)</label>
        <input id="filename" name="listing[image][filename]" placeholder="listingimage" type="text" class="form-control">
      </div>

      <!-- Price and Country -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input id="price" name="listing[price]" placeholder="12000" type="number" class="form-control" required>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input id="country" name="listing[country]" placeholder="India" type="text" class="form-control" required>
        </div>
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input id="location" name="listing[location]" placeholder="Jaipur, Rajasthan" type="text" class="form-control" required>
      </div>

      <!-- Submit Button -->
      <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
    
  </div>
</div>
